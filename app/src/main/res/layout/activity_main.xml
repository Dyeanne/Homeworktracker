<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3FC"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout">

    <LinearLayout
        android:layout_width ="match_parent"
        android:layout_height ="match_parent"
        android:orientation ="vertical">
        <include
            layout ="@layout/main_toolbar"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F0F3FC"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="390dp"
                android:layout_height="108dp"
                android:paddingLeft="10dp"
                android:background="@drawable/whitebackground"
                android:gravity="center_vertical"
                android:orientation="vertical"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.097">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/alata"
                    android:text="Course:"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.049"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                </TextView>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="409dp"
                    android:layout_height="77dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.183"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.169">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >

                        <Button
                            android:id="@+id/button12"
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/circle_button_sub1"
                            android:fontFamily="@font/alata"
                            android:text="PE3"
                            android:textSize="11sp"
                            tools:layout_editor_absoluteX="69dp"
                            tools:layout_editor_absoluteY="253dp" />

                        <Button
                            android:id="@+id/button14"
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_button_sub2"
                            android:fontFamily="@font/alata"
                            android:text="PE3"
                            android:textSize="11sp"
                            tools:layout_editor_absoluteX="69dp"
                            tools:layout_editor_absoluteY="253dp" />

                        <Button
                            android:id="@+id/button15"
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_button_sub3"
                            android:fontFamily="@font/alata"
                            android:text="PE3"
                            android:textSize="11sp"
                            tools:layout_editor_absoluteX="69dp"
                            tools:layout_editor_absoluteY="253dp" />

                        <Button
                            android:id="@+id/button16"
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_button_sub4"
                            android:fontFamily="@font/alata"
                            android:text="PE3"
                            android:textSize="11sp"
                            tools:layout_editor_absoluteX="69dp"
                            tools:layout_editor_absoluteY="253dp" />

                        <Button
                            android:id="@+id/button17"
                            android:layout_width="70dp"
                            android:layout_height="63dp"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/circle_button_sub5"
                            android:fontFamily="@font/alata"
                            android:text="PE3"
                            android:textSize="11sp"
                            tools:layout_editor_absoluteX="69dp"
                            tools:layout_editor_absoluteY="253dp" />

                        <Button
