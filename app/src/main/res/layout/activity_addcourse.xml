<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width ="match_parent"
            android:layout_height ="match_parent"
            android:orientation ="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/whitebackground"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="25dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:fontFamily="@font/alata"
                            android:text="ADD COURSE"
                            android:textColor="#000000"
                            android:textSize="28sp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/main">

                        <LinearLayout
                            android:layout_width="324dp"
                            android:layout_height="270dp"
                            android:background="@drawable/whitebackground"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.492"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                            app:layout_constraintVertical_bias="0.281">

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/alata"
                                    android:text="PICK A COLOR:"
                                    android:textColor="@color/black"

                                    android:textSize="20sp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:padding="5dp">

                                        <Button
                                            android:id="@+id/button7"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@drawable/circle_button_sub3"
                                            android:contentDescription="@string/app_name"
                                            android:textSize="11sp" />

                                        <Button
                                            android:id="@+id/button6"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@drawable/circle_button_sub2"
                                            android:contentDescription="@string/app_name"
                                            android:textSize="11sp" />

                                        <Button
                                            android:id="@+id/button12"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@drawable/circle_button_sub1"
                                            android:contentDescription="@string/app_name"
                                            android:textSize="11sp" />

                                        <Button
                                            android:id="@+id/button8"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="7dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@drawable/circle_button_sub5"
                                            android:contentDescription="@string/app_name"
                                            android:textSize="11sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                        <Button
                                            android:id="@+id/button10"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@drawable/circle_button_sub6"
                                            android:contentDescription="@string/app_name"
                                            android:textSize="11sp" />

                                        <Button
                                            android:id="@+id/button9"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@drawable/circle_button_sub4"
                                            android:contentDescription="@string/app_name"
                                            android:textSize="11sp" />

                                        <Button
                                            android:id="@+id/button11"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:background="@drawable/circle_button_sub7"
                                            android:contentDescription="@string/app_name"
                                            android:textSize="11sp" />

                                </LinearLayout>

                                <Button
                                    android:id="@+id/button20"
                                    android:layout_width="146dp"
                                    android:layout_height="51dp"
                                    android:layout_marginLeft="100dp"
                                    android:layout_marginTop="25dp"
                                    android:background="@drawable/custom_button2"
                                    android:drawableLeft="@drawable/ic_baseline_book_24"
                                    android:fontFamily="@font/alata"
                                    android:text="Add Course" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="342dp"
                            android:layout_height="281dp"
                            android:background="@drawable/whitebackground"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.49"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.07">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                        <TextView
                                            android:id="@+id/textView7"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/alata"
                                            android:text="COURSE CODE:"
                                            android:textColor="@color/black"
                                                android:paddingRight="50dp"
                                            android:textSize="15sp" />

                                        <EditText

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:ems="10"

                                            android:inputType="textPersonName"
                                            android:text=""
                                            android:textSize="15sp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/alata"
                                            android:text="COURSE TITLE:"
                                            android:paddingRight="50dp"
                                            android:textColor="@color/black"

                                            android:textSize="15sp" />

                                        <EditText
                                            android:id="@+id/title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:ems="10"

                                            android:inputType="textPersonName"
                                            android:text=""
                                            android:textSize="15sp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/alata"
                                            android:text="UNITS:"
                                            android:textColor="@color/black"
                                            android:paddingRight="105dp"
                                            android:textSize="15sp" />
                                        <EditText

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:ems="10"

                                            android:inputType="textPersonName"
                                            android:text=""
                                            android:textSize="15sp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                        <TextView

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/alata"
                                            android:text="LECTURE TIME:"
                                            android:paddingRight="50dp"
                                            android:textColor="@color/black"

                                            android:textSize="15sp" />
                                        <EditText
                                            android:id="@+id/editTextTextPersonName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:ems="10"

                                            android:inputType="textPersonName"
                                            android:text=""
                                            android:textSize="15sp"/>

                                </LinearLayout>

                        </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
